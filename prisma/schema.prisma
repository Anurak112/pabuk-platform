// ============================================
// CHAIYAPHUM ROAD MONITOR - INFRASTRUCTURE MODELS
// ============================================

model Road {
  id               String       @id @default(cuid())
  name             String       // Road name (e.g., "ถนนสายชัยภูมิ-บ้านเขว้า")
  roadNumber       String?      // Official number (e.g., "Highway 201")
  district         String       // Amphoe in Chaiyaphum
  subdistrict      String?      // Tambon
  startPoint       String?      // Starting location description
  endPoint         String?      // Ending location description
  totalKm          Float?       // Road length in kilometers
  isSugarcaneRoute Boolean      @default(false) // Key sugarcane transport route
  surfaceType      String?      // Asphalt, concrete, laterite
  lastSurveyDate   DateTime?    // Last official survey
  notes            String?      @db.Text
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  reports          RoadReport[]

  @@unique([name, district])
  @@index([isSugarcaneRoute])
  @@index([district])
}

model RoadReport {
  id            String         @id @default(cuid())
  userId        String
  roadId        String?
  
  // Location details
  location      String         // Address, landmark, or km marker
  latitude      Float
  longitude     Float
  
  // Damage details
  severity      Severity
  damageType    DamageType
  description   String?        @db.Text
  imageUrls     String[]       // Array of image URLs
  
  // Report lifecycle
  status        ReportStatus   @default(PENDING)
  verifiedAt    DateTime?      // When admin verified
  verifiedById  String?        // Admin who verified
  
  // Repair tracking
  repairStartedAt DateTime?
  repairedAt      DateTime?
  repairCost      Float?       // Cost in Thai Baht
  repairNotes     String?      @db.Text
  repairImageUrls String[]     // Before/after photos
  
  // Points awarded for this report
  pointsAwarded Int            @default(0)
  
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  user          User           @relation(fields: [userId], references: [id])
  road          Road?          @relation(fields: [roadId], references: [id])

  @@index([status])
  @@index([severity])
  @@index([damageType])
  @@index([createdAt])
  @@index([latitude, longitude])
  @@index([userId])
  @@index([roadId])
}

// Road damage severity levels
enum Severity {
  LOW       // Minor cracks, cosmetic issues
  MEDIUM    // Potholes, noticeable damage
  HIGH      // Large potholes, significant damage
  CRITICAL  // Dangerous, impassable, safety hazard
}

// Types of road damage
enum DamageType {
  POTHOLE           // หลุม
  CRACK             // รอยแตก
  COLLAPSE          // ถนนทรุด
  EROSION           // การกัดเซาะ
  FLOODING          // น้ำท่วมขัง
  SURFACE_WEAR      // ผิวถนนสึกหรอ
  BRIDGE_DAMAGE     // สะพานชำรุด
  SHOULDER_DAMAGE   // ไหล่ทางชำรุด
  OTHER             // อื่นๆ
}

// Report lifecycle status
enum ReportStatus {
  PENDING       // รอตรวจสอบ - Awaiting verification
  VERIFIED      // ยืนยันแล้ว - Confirmed damage
  IN_PROGRESS   // กำลังซ่อม - Repair in progress
  REPAIRED      // ซ่อมแล้ว - Repair completed
  REJECTED      // ไม่รับ - False/duplicate report
  ARCHIVED      // เก็บถาวร - Old resolved reports
}

